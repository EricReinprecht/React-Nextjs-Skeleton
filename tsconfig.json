{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@styles/*": ["./src/assets/styles/*"],
      "@fonts/*": ["./src/assets/fonts/*"],
      "@templates/*": ["./src/app/lib/templates/*"],
      "@components/*": ["./src/app/lib/components/*"],
      "@entities/*": ["./src/app/lib/entities/*"],
      "@services/*": ["./src/app/lib/services/*"],
      "@firebase/*": ["./src/app/lib/firebase/*"],
      "@context/*": ["./src/app/lib/context/*"],
      "@hoc/*": ["./src/app/lib/hoc/*"],
      "@svgs/*": ["./src/app/lib/svgs/*"],
      "@utils/*": ["./src/app/lib/utils/*"],
      "@styles_ts/*": ["./src/app/lib/styles/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../firebase.ts", "src/middleware.ts"],
  "exclude": ["node_modules"]
}
